
@{
    @model Webzine.ViewModels.TitresViewModel
}

<h2>Titres</h2>
<hr />

<!-- lien vers le formulaire d'ajout de titre -->
@Html.ActionLink("Ajouter un nouveau titre", "create", "titre", new { area = "admin" }, new { @class = "btn btn-primary" })
<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr class="table-secondary">
                <th class="col-2 col-xs-1" scope="col">Artiste</th>
                <th class="col-3" scope="col">Titre</th>
                <th class="text-center" scope="col">Durée</th>
                <th class="text-center tableDisplay" scope="col">Date de sortie</th>
                <th class="text-center" scope="col"><i class="fas fa-eye"></i></th>
                <th class="text-center tableDisplay" scope="col"><i class="fas fa-thumbs-up"></i></th>
                <th class="text-center" scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var titre in Model.Titres)
            {
                <tr>
                    <td class="" scope="row">@titre.Artiste.Nom</td>
                    <td class="text-break">@titre.Libelle</td>
                    <td class="text-center middle">@titre.Duree</td>
                    <td class="text-center tableDisplay">@titre.DateSortie.ToString("dd/MM/yyyy")</td>
                    <td class="text-end">@titre.NbLectures</td>
                    <td class="text-end tableDisplay">@titre.NbLikes</td>
                    <td class="text-center">
                        <a href="@Url.Action("edit", "titre", new { area = "admin", id=titre.IdTitre})"><i class="fas fa-edit"></i></a>
                        <a href="@Url.Action("delete", "titre", new { area = "admin", id=titre.IdTitre})"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>